{
  "manifest_version": 2,
  "name": "browser_extension",
  "description": "A browser extension learning project",
  "version": "1.0.0",
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "permissions": [
    "activeTab"
  ],
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_tilte": "A browser extension learning project"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "execute.js"
      ]
    }
  ]
}